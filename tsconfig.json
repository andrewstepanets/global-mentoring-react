{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["es5",  "es2015", "es2016", "dom", "dom.iterable"],
    "outDir": "./build",
    "allowJs": true,
    "moduleResolution": "node",
    "module": "es2020",
    "jsx": "react",
    "noImplicitAny": false,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.d.ts"]
}
